# -*- ruby -*-

module Nokogiri
  module LibXML
    class XmlBuffer < CrossFFI::Struct
      @@@
      struct do |s|
        s.name 'struct _xmlBuffer'
        s.include 'libxml/tree.h'
        s.field :content, :string
        s.field :use, :int
        s.field :size, :int
      end
      @@@

      def self.release ptr
        LibXML.xmlBufferFree(ptr)
      end
    end
  end
end
