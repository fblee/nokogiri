# -*- ruby -*-

module Nokogiri
  module LibXML

    module XmlXpathContextMixin
      def self.included(base)
        base.class_eval do
          @@@
          struct do |s|
            s.name "struct _xmlXPathContext"
            s.include "libxml/xpath.h"
            s.field :doc, :pointer
            s.field :node, :pointer
          end
          @@@
        end
      end

      def node
        LibXML::XmlNode.new(self[:node])
      end

      def doc
        LibXML::XmlDocumentCast.new(self[:doc])
      end
    end

    class XmlXpathContext < CrossFFI::Struct
      include XmlXpathContextMixin

      def self.release ptr
        LibXML.xmlXPathFreeContext(ptr)
      end
    end

    class XmlXpathContextCast < FFI::Struct
      include XmlXpathContextMixin
    end

  end
end
